# Choose ONE of the following auth methods

# A) Public container (no credentials)
# AZURE_ACCOUNT_URL="https://<account>.blob.core.windows.net"
# AZURE_CONTAINER="my-container"

# B) Container/Account SAS (read-only)
# AZURE_ACCOUNT_URL="https://<account>.blob.core.windows.net"
# AZURE_SAS_TOKEN="?sv=...&ss=bfqt&..."   # can include or omit leading '?'
# AZURE_CONTAINER="my-container"

# C) Connection string (strongest, not exposed)
# AZURE_CONNECTION_STRING="DefaultEndpointsProtocol=...;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net"
# AZURE_CONTAINER="my-container"
